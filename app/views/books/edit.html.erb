<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
<div class="form">
  <p>Title</p>
  <%= f.text_field :title %>
</div>
<div class="form">
  <p>Body</p>
  <%= f.text_area :body %>
</div>
<div class="form">
  <p></p>
  <%= f.submit 'Update Book' %>
</div>
<% end %>


  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path(@book.id) %>


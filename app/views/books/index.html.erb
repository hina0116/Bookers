<div class="book-wrap">
<% @books.each do |book| %>
<% end %>
</div>

<h1>Books</h1>
<% @books.each do |book| %>

  <p>Title</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <p></p>
  <%= f.submit 'Create Book' %>
<% end %>
